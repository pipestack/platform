{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.14.2/.schema/devbox.schema.json",
  "packages": [
    "rustup@latest",
    "libiconv@latest",
    "just@latest",
    "process-compose@latest",
    "nodejs@22"
  ],
  "env": {
    "WASMCLOUD_OBSERVABILITY_ENABLED": "true",
    "OTEL_TRACES_EXPORTER":            "otlp",
    "WASMCLOUD_VERSION":               "1.8.0",
    "OTEL_EXPORTER_OTLP_ENDPOINT":     "http://127.0.0.1:4318",
    "WASMCLOUD_OCI_ALLOWED_INSECURE":  "localhost:5000",
    "PATH":                            "$HOME/.cargo/bin:$PATH"
  },
  "shell": {
    "init_hook": [
      "cargo install wash",
      "cargo install cargo-watch",
      "cargo fetch"
    ],
    "scripts": {
      "services": "process-compose",
      "webapp:types:build": "cd ./crates/services/pipeline-manager/ && cargo test export_bindings && cp bindings/pipeline.ts ../../../../../webapp/main/src/routes/builder/types-rust.ts && cd -"
    }
  }
}
