{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "./schemas/messaging/messaging.schema.json",
  "type": "object",
  "properties": {
    "provider": {
      "enum": ["nats", "redis", "kafka"],
      "default": "nats",
      "description": "Messaging provider"
    },
    "instances": {
      "type": "integer",
      "minimum": 1,
      "maximum": 20,
      "default": 1,
      "description": "Number of messaging provider instances"
    }
  }
}