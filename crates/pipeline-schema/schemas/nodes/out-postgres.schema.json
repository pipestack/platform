{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "./schemas/nodes/out-postgres.schema.json",
  "type": "object",
  "required": ["connection_string", "table"],
  "properties": {
    "connection_string": {
      "type": "string",
      "pattern": "^postgres(ql)?://",
      "description": "PostgreSQL connection string"
    },
    "table": {
      "type": "string",
      "minLength": 1,
      "description": "Target table name"
    },
    "batch_size": {
      "type": "integer",
      "minimum": 1,
      "maximum": 10000,
      "default": 100,
      "description": "Insert batch size"
    },
    "upsert": {
      "type": "boolean",
      "default": false,
      "description": "Use upsert instead of insert"
    },
    "conflict_columns": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Columns for conflict resolution"
    },
    "schema": {
      "type": "string",
      "description": "Database schema name"
    }
  }
}